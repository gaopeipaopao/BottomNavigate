<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:id="@+id/header_top_talk"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/talk_header_picture"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/talk_header_name"
            android:layout_marginTop="17dp"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_text_talk"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/talk_content"
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/talk_bottom"
        android:orientation="horizontal"
        android:background="#fff">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:id="@+id/digg_talk"
            android:background="@drawable/dingding" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/digg_count_talk"
            android:layout_marginTop="15dp"
            android:textSize="12dp"/>

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:id="@+id/bury_talk"
            android:background="@drawable/buzan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/bury_count_talk"
            android:layout_marginTop="15dp"
            android:textSize="12dp"/>

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/comment_talk"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/xiaoxi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/comment_count_talk"
            android:layout_marginTop="15dp"
            android:textSize="12dp"/>

    </LinearLayout>

</LinearLayout>