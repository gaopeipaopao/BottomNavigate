<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/header_top_photo"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/photo_header_picture"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/photo_header_name"
            android:layout_marginTop="12dp"
            android:textSize="15dp" />

    </LinearLayout>


     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/header_text_photo"
         android:orientation="horizontal">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/photo_text_content"
             android:textSize="17dp"
             android:textColor="#000000" />


     </LinearLayout>

    <!--<GridView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/photo_gridview"-->
        <!--android:numColumns="3"-->
        <!--android:horizontalSpacing="2dp"-->
        <!--android:verticalSpacing="2dp"/>-->

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photo_picture"
        android:background="#EDEDED" >
    </WebView>


    <!--<ImageView-->
        <!--android:id="@+id/photo_picture"-->
        <!--android:adjustViewBounds="true"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#EDEDED" />-->
        <!--//android:scaleType="centerCrop"-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/photo_bottom"
        android:orientation="horizontal"
        android:background="#fff">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:id="@+id/digg_photo"
            android:background="@drawable/dingding" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/digg_count"
            android:layout_marginTop="15dp"
            android:textSize="12dp"/>

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:id="@+id/bury_photo"
            android:background="@drawable/buzan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/bury_count"
            android:layout_marginTop="15dp"
            android:textSize="12dp"/>

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/comment_photo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/xiaoxi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/comment_count"
            android:layout_marginTop="15dp"
            android:textSize="12dp"/>

    </LinearLayout>

</LinearLayout>